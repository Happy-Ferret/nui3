echo ----------------------------------------------------------------------------------------
echo Build lib
echo ----------------------------------------------------------------------------------------
~/work/dev/android/android-ndk-r5b/ndk-build -j 8 NDK_DEBUG=1

echo ----------------------------------------------------------------------------------------
echo Build app
echo ----------------------------------------------------------------------------------------
ant debug

echo ----------------------------------------------------------------------------------------
echo Uninstall old app
echo ----------------------------------------------------------------------------------------
adb uninstall com.example.native_activity

echo ----------------------------------------------------------------------------------------
echo Install new app
echo ----------------------------------------------------------------------------------------
adb install bin/NativeActivity-debug.apk

echo ----------------------------------------------------------------------------------------
echo Build OK
echo ----------------------------------------------------------------------------------------
